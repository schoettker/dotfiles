" Lightline
" =====================================
  function! LightLineFilename()
    return expand('%')
  endfunction

  " get rid of default vim mode information
  set noshowmode

  set laststatus=2
  if !has('gui_running')
      set t_Co=256
    endif

  let g:lightline = {
      \ 'colorscheme': 'seoul256',
      \ 'component_function': {
      \   'filename': 'LightLineFilename'
      \ },
      \ 'component': {
      \   'readonly': '%{&readonly?"î‚¢":""}',
      \ },
      \ 'separator': { 'left': 'î‚°', 'right': 'î‚²' },
