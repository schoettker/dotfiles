# terminal emulator
super + Return
	termite


# make sxhkd reload its configuration files: 
# seems not to work currently
super + shift + r
	pkill -USR1 -x sxhkd

# program launcher
super + d
  rofi -fullscreen -show drun -theme ~/dotfiles/config/rofi/drun.rasi

# Apps
super + F1
  google-chrome-stable

super + F2
  chromium

super + F3
  caja

F7
  ~/dotfiles/scripts/scratchpad.sh scratchterm

F8
  ~/dotfiles/scripts/scratchpad.sh scratchmacs --classname

F9
  ~/dotfiles/scripts/scratchpad.sh scratchbrowser --classname



# editor
super + e
  emacs

super + Tab
  ~/dotfiles/scripts/window-switcher.py
  # rofi -show window -window-command "bspc node {window} -g hidden=off -f"

# super + shift + Tab
  # ~/dotfiles/config/hidden-nodes.sh

super + shift + s
  ~/dotfiles/scripts/screenshot.sh

super + n
  bspc node -g hidden=on

super + m
  bspc node -t \~fullscreen

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

super + c
  clipster -sc

# alternate between the tiled and monocle layout
# super + m
# 	bspc desktop -l next

# send the newest marked node to the newest preselected node
# super + y
# 	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,f}
	bspc node -t {tiled,pseudo_tiled,floating}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# alt + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
# super + {_,shift + }c
# 	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
# super + {grave,Tab}
# 	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
# alt + {_,shift + }{1-9,0}
# 	bspc {desktop -f,node -d} '^{1-9,10}'

# Go to desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Send to desktop
super + ctrl + {1-9,0}
	bspc node -d '^{1-9,10}'


# Send to desktop and follow
super + shift + {1-9,0}
         id=$(bspc query -N -n); bspc node -d '^{1-9}'; bspc node -f ${id}

